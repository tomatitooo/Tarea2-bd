generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                    Int                   @id @default(autoincrement())
  nombre                String
  correo                String                @unique
  clave                 String
  descripcion           String?
  estado                Boolean               @default(true)
  correos               Correos[]
  favoritos             CorreosFavoritos[]
  direccionesBloqueadas DireccionBloqueada[]
}

model Correos {
  id        Int        @id @default(autoincrement())
  idUsuario Int
  asunto    String?
  contenido String?
  fecha     DateTime   @default(now())
  usuario   Usuario    @relation(fields: [idUsuario], references: [id])
  favorito  CorreosFavoritos?
}

model CorreosFavoritos {
  idUsuario Int
  idCorreo  Int       @unique
  usuario   Usuario   @relation(fields: [idUsuario], references: [id])
  correo    Correos   @relation(fields: [idCorreo], references: [id])

  @@id([idUsuario, idCorreo])
}

model DireccionBloqueada {
  id          Int       @id @default(autoincrement())
  direccion   String
  usuarioId   Int
  usuario     Usuario   @relation(fields: [usuarioId], references: [id])
}
